	//"image": "mcr.microsoft.com/devcontainers/universal:2",

	"features": {
		//"ghcr.io/devcontainers/features/java:1": {
		//	"version": "none",
		//	"installMaven": "false",
		//	"installGradle": "false"
		//},
		//"ghcr.io/akhildevelops/devcontainer-features/pip:0": {},
		//"ghcr.io/devcontainers/features/desktop-lite:1": {
		//	"password": "eagles"
		//}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"vscjava.vscode-java-pack",
				"ms-python.python",
				"ms-vsliveshare.vsliveshare",
				"-visualstudioexptteam.vscodeintellicode",
				"-visualstudioexptteam.intellicode-api-usage-examples"
			],
			"settings": {

    			"extensions.allowed": {
        			"microsoft" : true,
        			"github" : true,
        			"redhat" : true,
					"visualstudioexptteam.vscodeintellicode" : false,
					"visualstudioexptteam.intellicode-api-usage-examples" : false,
					"github.copilot" : false,
					"github.copilot-chat" : false
				}
			}
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	"forwardPorts": [6080],
	"portsAttributes": {
	  "6080": {
		"label": "desktop"
	  }
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "java -version",
	"postCreateCommand": "/home/codespace/.python/current/bin/pip3 install termcolor pygame; /usr/local/bin/git config pull.rebase true"

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
